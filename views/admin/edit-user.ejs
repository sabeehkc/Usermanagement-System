<%- include('../layout/header.ejs') %>

<div class=" center-div mt-5" id="login">
    <div class="container w-25  py-5  rounded">
        <div class="title text-center pb-2">
            <h2 class="font-weight-bold">Edit User</h2>
        </div>

        <form action="" method="POST" class="pt-2">
            <div class="form-group pb-3">
                <label for="name">Name:</label>
                <input type="name" class="form-control" value="<%= user.name %>" name="name" required >
            </div>
            <div class="form-group pb-3">
                <label for="email">Email:</label>
                <input type="email" class="form-control" value="<%= user.email %>" name="email" required >
            </div>
            <div class="form-group pb-3">
                <label for="mobileno">Mobile No:</label>
                <input type="text" class="form-control" value="<%= user.mobile %>" name="mno" required >
            </div>
            <input type="hidden" name="id" value="<%= user._id %>">
         <div class="submit-button text-center mt-3">
            <button type="submit" class="btn-sumbit rounded-pill">Submit</button>
         </div>
         
        </form>
        <a class="Goback " href="/admin/home">Go Back</a>
    </div>
</div>


<%- include('../layout/footer.ejs') %>