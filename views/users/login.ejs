<%- include('../layout/header.ejs') %>

<div class=" center-div mt-5" id="login">
    <div class="container w-25 py-5  rounded">
        <div class="title text-center pb-2">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
           
        </div>
      
<br>
        <form action="/login" method="POST" class="">
            <div class="form-group pb-3">
                <label for="email">Email:</label>
                <input type="email" class="form-control" placeholder="" name="email" required >
            </div>
            <div class="form-group pb-2">
                <label for="password">Password:</label>
                <input type="password" class="form-control" name="password" placeholder="" required >
         </div>
         <% 
         if(typeof message !== 'undefined'){
           %>
            <small style="color: rgb(238, 226, 226);">  <%= message %>   </small>
            <%
         }
 
 %>
         
         <div class="submit-button text-center pt-2">
            <button type="submit" class="btn-sumbit rounded-pill w-75">Submit</button>
         </div>
        <p class="reg-text">
           Don't have an account? <a class="signup" href="/register">Register</a> 
        </p> 
        </form>
    </div>
</div>

<%- include('../layout/footer.ejs') %>