<%- include('../layout/header.ejs') %>

<div class=" center-div mt-5" id="login">
    <div class="container w-25 border py-5 border-info rounded">
        <div class="title text-center pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
           
        </div>
        <% 
        if(typeof message !== 'undefined'){
          %>
           <small style="color: red;">  <%= message %>   </small>
           <%
        }

%>
<br>
        <form action="/login" method="POST" class="pt-2">
            <div class="form-group pb-3">
                <label for="email">Email:</label>
                <input type="email" class="form-control" placeholder="" name="email" required >
            </div>
            <div class="form-group pb-3">
                <label for="password">Password:</label>
                <input type="password" class="form-control" name="password" placeholder="" required >
         </div>
         
         <div class="submit-button text-center">
            <button type="submit" class="btn-sumbit rounded-pill w-75">Submit</button>
         </div>
        <p class="reg-text">
           Don't have an account? <a class="signup" href="/register">Register</a> 
        </p> 
        </form>
    </div>
</div>

<style>
body{
    font-family: 'Open Sans', sans-serif;
    background-image: url('../assets/img.jpg');
    background-size: cover;
    background-repeat: no-repeat;
}

.btn-sumbit{
    border: none;
    background: rgb(244,244,244);
    color: rgb(0, 0, 0);
}
.form-control{
  background-color: rgba(255, 255, 255,0.7);  
}
.signup{
    text-decoration: none;
    color: white;
}
.reg-text{
    margin-top: 20px;
    color: rgba(255, 255, 255, 0.55);
}
</style>





<%- include('../layout/footer.ejs') %>